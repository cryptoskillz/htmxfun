---
layout: layout_external
title: "signup"
---

<div class="pure-g">
  <div class="pure-u-1">Fill in the details to Signup</div>
</div>
<div>
  <form
    hx-post="{{ API_JWT_URL }}"
    hx-vals='{"workerAction": "doSignup"}'
    hx-target="#responseText"
    hx-swap="innerHTML"
    class="pure-form pure-form-stacked"
  >
    <label for="email"> Email </label>
    <input
      type="email"
      name="email"
      placeholder="enter email"
      id="email"
      required
    />
    <label for="password"> Password </label>
    <input
      type="password"
      name="password"
      placeholder="enter password"
      id="password"
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
      title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"
      required
    />
    <button class="pure-button" type="submit">Signup</button>
    <a href="/login" class="pure-button">Login</a>
  </form>

  </form>
</div>
